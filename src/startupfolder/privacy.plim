- namespace name="defs" defs.plim

doctype html
html lang="en"
    head
        - call title="Startup Folder - Privacy Policy" domain="lowtechguys.com" description="Run anything at startup by simply placing it in a special folder" favicon="/startupfolder/favicon.ico" icon="startupfolder-icon" icon_size="1280" screenshot="startupfolder-screenshot" color="rgb(255, 255, 255)" canonical="/startupfolder/privacy" defs:head

    body.bg-blue-50.text-center.max-w-[100vw].flex.flex-col.min-h-[100vh].justify-between.overflow-x-hidden
        header.flex.items-center.justify-between.px-4.md:px-8.max-w-[100vw].w-[100vw].h-24.text-gray-500.justify-self-end
            a.flex.flex-center.hover:transform.hover:scale-110 href="/"
                icon.w-16.h-16.md:w-20.md:h-20.filter.drop-shadow-lg.text-gray-700 : lowtech
            .links
                a.text-sm.md:text-base.ml-4 href="/startupfolder/" Startup Folder
                a.text-sm.md:text-base.ml-4 href="/contact?app=StartupFolder" Contact

        section#hero.min-w-[100vw].min-h-[90vh].flex-center.flex-col.relative.pb-20
            img.w-20.h-20.md:w-28.md:h-28.filter.drop-shadow-2xl src="/static/img/startupfolder-icon.png"
            h1.mt-10.text-4xl.text-amber-400.mb-2.drop-shadow-xl.mb-2 Startup Folder
            h5.text-gray-800 Run anything at startup
            h5.text-gray-800.m-0.p-0.-mt-1 by simply placing it in a special folder
            h3.text-black Startup Folder does not collect any personal information.

        footer.flex.items-center.justify-between.px-2.md:px-8.max-w-[100vw].w-[100vw].h-24.text-gray-500.justify-self-end
            h4.font-extralight.text-gray-500.hidden.md:block The low-tech guys Â© 2023
            .links.w-full.md:w-auto
                / a.text-red-hot.ml-4 href="/contact" Contact
        -stylus
            @import "stylus/base"

            .links
                a
                    background-color alpha(black, 0.1)
                    color black
